<div class="carousel slide" data-ride="carousel" id="carouselExampleControls">
    <div class="carousel-inner">
        <% for (let i = 0; i < campground.images.length; i++) { %>
            <div class="<% i === 0 ? 'carousel-item active' : 'carousel-item'" %>>
                <img class="d-block w-100" src=`${campground.images[i].url}` alt=`${campground.images[i].filename}`>
            </div>
        <% } %>
    </div>
    <a href="#carouselExampleControls" role="button" data-slide="prev" class="carousel-control-prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a href="#carouselExampleControls" role="button" data-slide="next" class="carousel-control-next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
